{
  "Serilog": {
    "Using": [
      "Avalab.Serilog.Sanitizer"
    ],
    "MinimumLevel": "Debug",
    "Override": {
      "Microsoft": "Information",
      "System": "Warning"
    },
    "WriteTo": [
      {
        "Name": "Sanitizer",
        "Args": {
          "rules": [
            {
              "Name": "PanUnreadableSanitizingFormatRule",
              "Args": {
                "replaceChar": "*"
              }
            },
            {
              "Name": "CvvHiddenSanitizingFormatRule",
              "Args": {

                "regularExpression": "(?i)cvv\"?[ ]?:[ ]?\"?\\d{3}\"?",
                "replaceChar": "*"
              }
            },
            {
              "Name": "CvvHiddenSanitizingFormatRule",
              "Args": {

                "regularExpression": "(?i)cvv\"?[ ]?:[ ]?\"?\\d{4}\"?",
                "replaceChar": "*"
              }
            },
            {
              "Name": "myFormatter",
              "Args": {

                "regularExpression": "(?i)cvv\"?[ ]?:[ ]?\"?\\d{3}\"?",
                "replaceChar": "*"
              }
            }
          ],
          "sinks": [
            {
              "Name": "Debug",
              "Args": {
                "outputTemplate": "{Message} 322 {NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithProperty" ]
  }
}
